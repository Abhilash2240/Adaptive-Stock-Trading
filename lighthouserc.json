{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "staticDistDir": "apps/client/dist",
      "url": ["index.html"],
      "settings": {
        "preset": "desktop"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "warn",
          {
            "minScore": 0.5
          }
        ],
        "categories:accessibility": [
          "warn",
          {
            "minScore": 0.7
          }
        ],
        "categories:best-practices": [
          "warn",
          {
            "minScore": 0.8
          }
        ],
        "categories:seo": [
          "warn",
          {
            "minScore": 0.7
          }
        ]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "reports/lighthouse"
    }
  }
}
